<% if (title) { %>
  <h1><%= title %></h1>
  <%- messages() %>
  <% if (errors) { %>
      <ul class="notice">
          <% errors.array().forEach(error => { %>
              <li><%= error.msg %></li>
          <% }) %>
      </ul>
  <% } %>
<% } else {
  res.redirect('/')
} %>

<div class="options">
  <button class="btn-submit" type="button"><a href="./add-classification">+ New Classification</a></button>
  <button class="btn-submit" type="button"><a href="./add-inventory">+ New Vehicle</a></button>
</div>
