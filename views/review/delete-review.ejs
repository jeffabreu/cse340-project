<% if (title) { %>
    <!-- Display title if it exists -->
    <h1><%= title %></h1>
<% } else {
    // Redirect to home if title does not exist
    res.redirect('/');
} %>
    
<!-- Message block -->
<%- messages() %>
<div class="delete-review">
<% if (locals.loggedin) { %>
    <!-- Display add review form if user is logged in -->
    <form id="deleteRev" action="/review/delete" method="post">
        <p class="deletion-note">Are you sure you want to delete this review? This action is permanent.</p>

        <div class="delete-form">

            <label for="review_date">Date created</label>
            <input type="text" name="review_date" id="reviewDate" disabled value="<%= review_date.toLocaleString() %>">

            <label for="review_text">Review</label>
            <textarea name="review_text" id="reviewText" rows="4" cols="50" disabled><%= review_text %></textarea>
        
            <button class="btn-submit"type="submit">Delete review</button>

            <!-- Hidden input for review_id -->
            <input type="hidden" name="review_id" <% if(review_id) { %> value="<%= review_id %>" <% } %>>

        </div>
    </form>
<% } %>
</div>
